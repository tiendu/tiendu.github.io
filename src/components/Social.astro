---
const { platform, username } = Astro.props;

const hosts = {
  facebook: "https://facebook.com",
  github: "https://github.com",
  linkedin: "https://www.linkedin.com",
  x: "https://x.com"
};

const root = hosts[platform] ?? `https://www.${platform}.com`;
const path = platform === "linkedin" && !username.startsWith("in/")
  ? `in/${username}`
  : username;

const href = `${root}/${path}`;
---
<a href={href} target="_blank" rel="noopener noreferrer me">{platform}</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
    border-radius: .375rem;
  }
</style>
