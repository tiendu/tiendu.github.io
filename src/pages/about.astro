---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "";

const identity = {
  firstName: "Tien",
  country: "Vietnam",
  occupation: "Bioinformatics Engineer",
  hobbies: ["cooking", "nature-sightseeing", "fermentation"]
};

const skills = ["Python", "Go", "Rust", "JavaScript", "Genomics", "Metagenomics"];

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<style define:vars={{ skillColor, fontWeight, textCase }}>
  /* Define default (light mode) colors */
  :root {
    --heading-color: #5a2d82; /* dark purple */
    --skill-color: var(--skillColor);
    --text-color: #333;
    --link-color: #5a2d82;
  }
  /* Dark mode overrides */
  html.dark {
    --heading-color: #d0bfff; /* lighter purple for dark mode */
    --skill-color: #a8d1ff;   /* a softer blue */
    --text-color: #eee;
    --link-color: #a8d1ff;
  }
  
  h1 {
    color: var(--heading-color);
    font-size: 4rem;
    margin-bottom: 1rem;
  }
  
  p,
  li {
    color: var(--text-color);
  }
  
  .skill {
    color: var(--skill-color);
    font-weight: var(--fontWeight);
    text-transform: var(--textCase);
    margin: 0.25em 0;
  }
  
  .identity-list,
  .skills-list {
    list-style-type: disc;
    padding-left: 1.5rem;
  }
  
  a {
    color: var(--link-color);
  }
  
  .section {
    margin-bottom: 2rem;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <section class="section">
    <p>This site will serve as a note for my thoughts and work.</p>
    <p>Here are a few facts about me:</p>
    <ul class="identity-list">
      <li>My name is {identity.firstName}.</li>
      <li>I live in {identity.country} and work as a {identity.occupation}.</li>
      {identity.hobbies && identity.hobbies.length > 0 && (
        <li>
          My hobbies include: {identity.hobbies.join(', ')}.
        </li>
      )}
    </ul>
  </section>
  
  <section class="section">
    <p>My skills are:</p>
    <ul class="skills-list">
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
  </section>
</BaseLayout>

